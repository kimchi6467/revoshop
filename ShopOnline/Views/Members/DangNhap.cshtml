
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="main-container col1-layout">
    <div class="main container">
        <div class="account-login">
            <div class="page-title">
                <h2>Đăng nhập</h2>
            </div>
            <fieldset class="col2-set">
                <div class="col-1 new-users">
                    <strong>Đăng ký</strong>
                    <div class="content">
                        <p>Tạo tài khoản để quản lý đơn hàng, và các thông tin thanh toán, gửi hàng một cách đơn giản hơn.</p>
                        <div class="buttons-set">
                            <button class="button create-account" onclick="window.location.href = '/Members/DangKy'"><span>Tạo tài khoản</span></button>
                        </div>
                    </div>
                </div>
                <div class="col-2 registered-users">
                    <div class="content">
                        @using (Html.BeginForm())
                        {
                            <form accept-charset="UTF-8" action="/account/login" id="customer_login" method="post">
                                <input name="FormType" type="hidden" value="customer_login">
                                <input name="utf8" type="hidden" value="true">
                                <strong>Đăng nhập</strong>
                                <p>Nếu bạn có tài khoản, hãy đăng nhập dưới đây.</p>
                                <font color="red">@ViewBag.ThongBao</font>

                                <ul class="form-list">
                                    <li>
                                        <label for="email">Tên đăng nhập<span class="required">*</span></label>
                                        <br>
                                        <input type="text" class="input-text" name="txtTaiKhoan" placeholder="Tên đăng nhập">
                                    </li>
                                    <li>
                                        <label for="pass">Mật khẩu <span class="required">*</span></label>
                                        <br>

                                        <input type="password" value="" class="input-text" name="txtMatKhau" placeholder="Mật khẩu">
                                    </li>
                                </ul>
                                <p class="required">* Bắt buộc</p>
                                <div class="buttons-set">
                                    <button id="send2" type="submit" class="button login"><span>Đăng nhập</span></button>

                                </div>

                            </form>
                                                         
                                <div class="content">                                  
                                    <div class="buttons-set">
                                        <button class="button create-account" onclick="window.location.href = '/Members/QuenMK'"><span>Quên Mật Khẩu</span></button>
                                    </div>
                                </div>
                     
                        }
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</section>