
@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <h1 class="display-4 text-center">Thay đổi mật khẩu</h1>

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Đổi Mật Khẩu</title>
        <style>
            body {
                font-family: Arial, sans-serif;
            }

            form {
                max-width: 300px;
                margin: 50px auto;
            }

            label, input {
                display: block;
                margin-bottom: 10px;
            }
            }
        </style>
    </head>
    <body>

        <form id="changePasswordForm">
            <label for="currentPassword">Mật khẩu hiện tại:</label>
            <input type="password" id="currentPassword" name="currentPassword" required>

            <label for="newPassword">Mật khẩu mới:</label>
            <input type="password" id="newPassword" name="newPassword" required>

            <label for="confirmPassword">Xác nhận mật khẩu mới:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>

            <button type="button" class="button" onclick="changePassword()">Đổi Mật Khẩu</button>

        </form>

        <script>
            function changePassword() {
                var currentPassword = document.getElementById('currentPassword').value;
                var newPassword = document.getElementById('newPassword').value;
                var confirmPassword = document.getElementById('confirmPassword').value;

                // Kiểm tra tính hợp lệ của mật khẩu mới (ví dụ: độ dài tối thiểu)
                if (newPassword.length < 6) {
                    alert("Mật khẩu mới phải có ít nhất 6 ký tự.");
                    return;
                }

                // Kiểm tra xác nhận mật khẩu mới
                if (newPassword !== confirmPassword) {
                    alert("Xác nhận mật khẩu mới không khớp.");
                    return;
                }

                // Gửi dữ liệu đến máy chủ (có thể sử dụng Ajax để thực hiện)
                alert("Đã gửi yêu cầu đổi mật khẩu.\nMật khẩu hiện tại: " + currentPassword + "\nMật khẩu mới: " + newPassword);
            }
        </script>

    </body>
</html>
