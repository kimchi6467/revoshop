@model IEnumerable<ShopOnline.Models.SANPHAM>
@foreach (var item in Model)
{
    <div class="item list-item-home list_item_fix">

        <div class="product-image">
            <a href="/@ViewBag.meta/@sanpham.meta/@sanpham.MaSANPHAM" title="@item.TenSANPHAM">
                <img class="small-image" src="~/Hinhsanpham/@item.HinhAnh" alt="@item.TenSANPHAM">
            </a>
        </div>
        <div class="product-shop">
            <h3 class="product-name"><a href="/@ViewBag.meta/@item.meta/@item.MaSANPHAM" title="@item.TenSANPHAM">@item.TenSANPHAM</a></h3>
            <div class="price-box">
                <span class="regular-price">
                    <span class="price">@String.Format("{0:0,0}", item.Giaban) VNĐ</span>

                </span>

            </div>
        </div>
    </div>
}

