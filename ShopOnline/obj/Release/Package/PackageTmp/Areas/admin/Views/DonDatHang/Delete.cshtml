@model ShopOnline.Models.DONDATHANG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Đơn Đặt Hàng</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Xóa Đơn Đặt Hàng
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <form role="form">
                                    <div class="form-group">
                                        <label>Mã Đơn hàng</label>
                                        @Html.TextBoxFor(model => model.MaDonHang, new { disabled = "disabled", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Họ và Tên</label>
                                        @Html.TextBoxFor(model => model.KHACHHANG.HoTen, new { disabled = "disabled", @class = "form-control" })
                                    </div>
                                    <button type="submit" class="btn btn-primary">Xóa</button>                                    
                                </form>
                                
                            }
                            <button onclick="window.location.href = '/admin/DanhMucTinTuc/'" class="btn btn-primary">Hủy</button>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>