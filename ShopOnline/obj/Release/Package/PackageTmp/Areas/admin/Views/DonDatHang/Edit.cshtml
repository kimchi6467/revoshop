@model ShopOnline.Models.DONDATHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Đơn Đặt Hàng</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Chỉnh Sửa Đơn Đặt Hàng
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.MaDonHang)

                                <form role="form">
                                    <div class="form-group">
                                        <label>Mã Đơn Đặt Hàng</label>
                                        @Html.TextBoxFor(model => model.MaDonHang, new { disabled = "disabled", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Họ Và Tên</label>
                                       @Html.DropDownList("MaKH", (SelectList)ViewBag.MaKH, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Ngày Đặt Hàng</label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            @Html.TextBoxFor(model => model.Ngaydat, new { @class = "form-control" })

                                        </div><!-- /.input group -->
                                    </div><!-- /.form group -->
                                    <div class="form-group">
                                        <label>Ngày Giao Hàng</label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            @Html.TextBoxFor(model => model.Ngaygiao, new { @class = "form-control" })

                                        </div><!-- /.input group -->
                                    </div><!-- /.form group -->
                                    <div class="form-group">
                                        <label>Tình Trạng Giao Hàng</label>
                                        @Html.EditorFor(model => model.Tinhtranggiaohang, new { @class = "form-control" })


                                    </div>
                                    <div class="form-group">
                                        <label>Tình Trạng Thanh Toán</label>
                                        @Html.EditorFor(model => model.Dathanhtoan, new { @class = "form-control" })


                                    </div>
                                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                                    <button onclick="window.location.href = '/admin/Menu/'" class="btn btn-primary">Hủy</button>


                                </form>
                            }
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
