@model IEnumerable<ShopOnline.Models.QUANGCAO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Quảng Cáo</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <button onclick="window.location.href = '/admin/QuanLyThongTin/Edit/1'" class="btn btn-primary">Chỉnh Sửa</button>
                <!-- /.panel-heading -->
                @foreach(var item in Model)
                { 
                <div class="panel-body">
                   
                    <div class="w3-content w3-display-container">
                        <img class="mySlides" src="~/Hinhsanpham/@item.slider1" style="width:100%">
                        <img class="mySlides" src="~/Hinhsanpham/@item.slider2" style="width:100%">
                        <img class="mySlides" src="~/Hinhsanpham/@item.slider3" style="width:100%">

                        <button class="w3-button w3-black w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
                        <button class="w3-button w3-black w3-display-right" onclick="plusDivs(1)">&#10095;</button>
                    </div>
                    
                    <script>
                        var slideIndex = 1;
                        showDivs(slideIndex);

                        function plusDivs(n) {
                            showDivs(slideIndex += n);
                        }

                        function showDivs(n) {
                            var i;
                            var x = document.getElementsByClassName("mySlides");
                            if (n > x.length) { slideIndex = 1 }
                            if (n < 1) { slideIndex = x.length }
                            for (i = 0; i < x.length; i++) {
                                x[i].style.display = "none";
                            }
                            x[slideIndex - 1].style.display = "block";
                        }
                    </script>

                    <!-- /.table-responsive -->
                </div>
                }
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>