@model ShopOnline.Models.SANPHAM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Danh Mục Nhà Sản Xuất</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Xóa Danh Mục Nhà Sản Xuất
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <form role="form">
                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên Danh Mục:</label>
                  
                        @Html.TextBoxFor(model => model.TenSANPHAM, new { disabled = "disabled", @class = "form-control" })


                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên Thẻ Meta:</label>
                        @Html.TextBoxFor(model => model.meta, new { disabled = "disabled", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Giá bán:</label>
                        @Html.TextBoxFor(model => model.Giaban, new { disabled = "disabled", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Hình Ảnh</label>
                        <img  src="@Url.Content("~/Hinhsanpham/"+ Model.HinhAnh)" width="40px" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Ngày Cập Nhật:</label>
                        @Html.TextBoxFor(model => model.Ngaycapnhat, new { disabled = "disabled", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Số Lượng Sản Phẩm:</label>
                        @Html.TextBoxFor(model => model.Soluongton, new { disabled = "disabled", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên Danh Mục:</label>
                        @Html.TextBoxFor(model => model.DANHMUC.TenDANHMUC, new { disabled = "disabled", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên Nhà Sản Xuất:</label>
                        @Html.TextBoxFor(model => model.NHASANXUAT.TenNSX, new { disabled = "disabled", @class = "form-control" })
                    </div>

                </div><!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Xóa</button>

                    @*@Html.ActionLink("Quay Trở Lại", "Index")*@
                </div>

            </form>
                            }
                            <button onclick="window.location.href = '/admin/SanPham/'" class="btn btn-primary">Hủy</button>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>