@model ShopOnline.Models.TinTuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Danh Sách Tin Tức</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Chỉnh Sửa Tin Tức
                </div>
                <h3 class="box-title">@ViewBag.Thongbao</h3>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm("Edit", "TinTuc", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.MaTinTuc)
                                <form role="form">
                                    <div class="box-body">
                                        @*<label for="exampleInputEmail1">@ViewBag.Thongbao</label>*@
                                        <div class="form-group">

                                            <label for="exampleInputEmail1">Tên Tin Tức</label>
                                            @Html.TextBoxFor(model => model.TenTinTuc, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Thẻ meta</label>
                                            @Html.TextBoxFor(model => model.meta, new { @class = "form-control" })
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Ngày Cập Nhật</label>
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                @Html.TextBoxFor(model => model.NgayCapNhat, new { @class = "form-control" })

                                            </div><!-- /.input group -->
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputFile">Hình Ảnh 1</label>
                                            <input type="file" name="fileUpload" />
                                        </div>
                               
                                        <div class="form-group">                                        
                                            @Html.DropDownList("MaTheLoai", (SelectList)ViewBag.MaTheLoai, new { @class = "form-control" })
                                        </div>
                                        
                          
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mô Ta Chi Tiết</label>
                                            @Html.TextAreaFor(model => model.NoiDungChiTiet, new { @class = "form-control" })
                                            <script>

                                                CKEDITOR.replace("NoiDungChiTiet");

                                            </script>
                                            <script>
                                                CKFinder.setupCKEditor(null, '/Areas/admin/ckfinder/');
                                            </script>
                                        </div>
                                    </div><!-- /.box-body -->
                                    <div class="box-footer">
                                        <button type="submit" class="btn btn-primary">Cập Nhật</button>

                                    </div>
                                </form>
                            }
                            <button onclick="window.location.href = '/admin/TinTuc/Index'" class="btn btn-primary">Hủy</button>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>