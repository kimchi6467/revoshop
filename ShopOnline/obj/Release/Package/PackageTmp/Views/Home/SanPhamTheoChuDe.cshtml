@model  List<ShopOnline.Models.SANPHAM>

@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6 item-collection item cls_item">

        <div class="col-item">

            <div class="item-inner">
                <div class="product-wrapper">
                    <div class="thumb-wrapper">
                        <a href="" title="@item.TenSANPHAM">
                            <img src="~/Hinhsanpham/@item.HinhAnh" class="img-fix" alt="@item.TenSANPHAM">
                        </a>
                    </div>
                </div>
                <div class="item-info">
                    <div class="info-inner">
                        <h3 class="item-title"> <a href="/@ViewBag.meta/@item.meta/@item.MaSANPHAM" title="@item.TenSANPHAM">@item.TenSANPHAM</a></h3>
                        <div class="item-content">

                            <div class="item-price">




                                <div class="price-box">


                                    <span class="regular-price">
                                        <span class="price">@String.Format("{0:0,0}", item.Giaban) VNĐ</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="actions">
                        <form class="variants" >


                            <input type="hidden" name="variantId" value="14933997" />
                            <button onclick="window.location.href = '/GioHang/GioHang'" class="button btn-cart add_to_cart">Mua Hàng</button>

                        </form>
                        <div class="eye-product"><a href="/@ViewBag.meta/@item.meta/@item.MaSANPHAM" title="kho hàng"><img class="eye-img" src="~/Hinhsanpham/eye.png" alt="Xem trước" /></a></div>
                    </div>

                </div>
            </div>

        </div>

    </div>
}

