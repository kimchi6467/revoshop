@model ShopOnline.Models.GopY

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Thông tin Liên Hệ Khách Hàng</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Thông tin Chi Tiết Liên Hệ Khách Hàng
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <form role="form">
                                    <div class="form-group">
                                        <label>Họ Và Tên</label>
                                        @Html.TextBoxFor(model => model.HoTen, new { disabled = "disabled", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Địa Chỉ Email</label>
                                        @Html.TextBoxFor(model => model.Email, new { disabled = "disabled", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Tiêu Đề</label>
                                        @Html.TextBoxFor(model => model.TieuDe, new { disabled = "disabled", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Nội Dung</label>
                                        @Html.TextAreaFor(model => model.NoiDung, new { disabled = "disabled", @class = "form-control" })
                                        <script>

                                            CKEDITOR.replace("NoiDung");

                                        </script>
                                        <script>
                                            CKFinder.setupCKEditor(null, '/Areas/admincp/ckfinder/');
                                        </script>
                                    </div>
                                   

                                </form>
                            }
                            <button onclick="window.location.href = '/admin/GopY'" class="btn btn-primary">Hủy</button>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>