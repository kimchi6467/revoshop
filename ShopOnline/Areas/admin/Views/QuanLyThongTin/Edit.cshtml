@model ShopOnline.Models.LienHe

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cài Đặt</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Thông Tin Liên hệ
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.Id)

                                <form role="form">
                                    <div class="form-group">
                                        <label>Điện Thoại Liên Hệ</label>
                                        @Html.TextBoxFor(model => model.Sodienthoai, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Địa Chỉ</label>
                                        @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
                                  </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                    </div>                                   
                                    <button type="submit" class="btn btn-primary">Cập Nhật</button>



                                </form>
                            }
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>