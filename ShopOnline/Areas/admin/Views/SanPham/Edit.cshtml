@model ShopOnline.Models.SANPHAM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Danh Sản Phẩm</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Chỉnh Sửa Sản Phẩm
                </div>
                <h3 class="box-title">@ViewBag.Thongbao</h3>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.MaSANPHAM)
                                <form role="form">
                                    <div class="box-body">
                                        @*<label for="exampleInputEmail1">@ViewBag.Thongbao</label>*@
                                        <div class="form-group">

                                            <label for="exampleInputEmail1">Tên Sản Phẩm</label>
                                            @Html.TextBoxFor(model => model.TenSANPHAM, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Thẻ meta</label>
                                            @Html.TextBoxFor(model => model.meta, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Giá Bán</label>
                                            @Html.TextBoxFor(model => model.Giaban, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Giới Thiệu</label>
                                            @Html.TextAreaFor(model => model.GioiThieu, new { @class = "form-control" })
                                            <script>

                                                CKEDITOR.replace("GioiThieu");

                                            </script>
                                            <script>
                                                CKFinder.setupCKEditor(null, '/Areas/admin/ckfinder/');
                                            </script>
                                        </div>

                                        <div class="form-group">
                                            <label for="exampleInputFile">Hình Ảnh</label>
                                            <input type="file" name="fileUpload" />                                           
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tên Danh Mục:</label>
                                            @*@Html.DropDownList("MaDM", (IEnumerable<SelectListItem>)ViewBag.MaDM, new { @class = "form-control" })*@
                                            @*@Html.DropDownListFor(item => Model.MaDM ViewBag.MaDM as SelectList, "-- Select --")*@
                                            @Html.DropDownList("MaDM", (SelectList)ViewBag.MaDM, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tên Danh Nhà Sản Suất:</label>

                                            @*@Html.DropDownList("MaNSX", (IEnumerable<SelectListItem>)ViewBag.MaNSX, new { @class = "form-control" })*@
                                            @*@Html.DropDownList("MaNSX", "-- Select --")*@
                                            @Html.DropDownList("MaDM", (SelectList)ViewBag.MaNSX, new { @class = "form-control" })

                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Số Lượng tồn</label>
                                            @Html.TextBoxFor(model => model.Soluongton, new { @class = "form-control" })
                                        </div>

                                        <div class="form-group">
                                            <label>Ngày Cập Nhật</label>
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                @Html.TextBoxFor(model => model.Ngaycapnhat, new { @class = "form-control" })

                                            </div><!-- /.input group -->
                                        </div><!-- /.form group -->

                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mô Ta Chi Tiết</label>
                                            @Html.TextAreaFor(model => model.Mota, new { @class = "form-control" })
                                            <script>

                                                CKEDITOR.replace("Mota");

                                            </script>
                                            <script>
                                                CKFinder.setupCKEditor(null, '/Areas/admin/ckfinder/');
                                            </script>
                                        </div>
                                    </div><!-- /.box-body -->
                                    <div class="box-footer">
                                        <button type="submit" class="btn btn-primary">Cập Nhật</button>

                                       
                                    </div>
                                </form>
                            }
                            <button onclick="window.location.href = '/admin/SanPham/Index'" class="btn btn-primary">Hủy</button>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>


