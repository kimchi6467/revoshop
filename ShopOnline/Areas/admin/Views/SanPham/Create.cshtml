@model ShopOnline.Models.SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Danh Sản Phẩm</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Thêm Sản Phẩm Mới
                    
                </div>
                <h3>@ViewBag.Thongbao</h3>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                        @using (Html.BeginForm("Create", "SanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
                                <form role="form">
                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên Sản Phẩm</label>
                        <input type="text" class="form-control" name="TenSANPHAM" placeholder="Nhập tên sản phẩm" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Thẻ meta</label>
                        <input type="text" class="form-control" name="meta" placeholder="Nhập tên thẻ meta" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Giá Bán</label>
                        <input type="text" class="form-control" name="Giaban" placeholder="Nhập giá bán" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Giới Thiệu</label>
                        @Html.TextAreaFor(model => model.GioiThieu, new {@class = "form-control"})
                        <script>

                            CKEDITOR.replace("GioiThieu");

                        </script>
                        <script>
                            CKFinder.setupCKEditor(null, '/Areas/admin/ckfinder/');
                        </script>
                    </div>



                    <div class="form-group">
                        <label for="exampleInputFile">Hình Ảnh 1</label>
                        <input type="file" name="fileUpload"/>
                        @*<img src="@Url.Content("~/Hinhsanpham/"+ Model.HinhAnh)" width="120px" /> (Ảnh hiện tại)*@


                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Hình Ảnh 2</label>
                        <input type="file" name="fileUpload"/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Hình Ảnh 3</label>
                        <input type="file" name="fileUpload"/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên Danh Mục:</label>
                        @Html.DropDownList("MaDM", (SelectList)ViewBag.MaDM, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên Danh Nhà Sản Suất:</label>

                        @Html.DropDownList("MaNSX", (SelectList)ViewBag.MaNSX, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Số Lượng tồn</label>
                        <input type="text" class="form-control" name="Soluongton" placeholder="Nhập số lượng tồn" required>
                    </div>

                    <div class="form-group">
                        <label>Ngày Cập Nhật</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="date" class="form-control" required name="Ngaycapnhat"/>

                        </div><!-- /.input group -->
                    </div><!-- /.form group -->

                    <div class="form-group">
                        <label for="exampleInputEmail1">Mô Ta Chi Tiết</label>
                        @Html.TextAreaFor(model => model.Mota, new {@class = "form-control"})
                        <script type="text/javascript">

                            CKEDITOR.replace("Mota");

                        </script>
                        <script>
                            CKFinder.setupCKEditor(null, '/Areas/admin/ckfinder/');
                        </script>
                    </div>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Thêm</button>

                </div>
            </form>
                            }
                            <button onclick="window.location.href = '/admin/SanPham/Index'" class="btn btn-primary">Hủy</button>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>