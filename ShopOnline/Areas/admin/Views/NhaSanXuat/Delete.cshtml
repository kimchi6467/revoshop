@model ShopOnline.Models.NHASANXUAT

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Danh Mục Nhà Sản Xuất</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Xóa Danh Mục Nhà Sản Xuất
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                          @using (Html.BeginForm())
{
                           @Html.AntiForgeryToken()
                                <form role="form">
                                    <div class="form-group">
                                        <label>Tên Nhà Sản Xuất</label>
                                        @Html.TextBoxFor(model => model.TenNSX, new {disabled = "disabled", @class = "form-control" })
                                    </div>         
                                    <div class="form-group">
                                        <label>Địa Chỉ</label>
                                        @Html.TextBoxFor(model => model.Diachi, new { disabled = "disabled", @class = "form-control" })
                                    </div>       
                                    <div class="form-group">
                                        <label>Số Điện Thoại</label>
                                        @Html.TextBoxFor(model => model.DienThoai, new { disabled = "disabled", @class = "form-control" })
                                    </div>                        
                                    <div class="form-group">
                                        <label>Thẻ meta</label>
                                        @Html.TextBoxFor(model => model.meta, new {disabled = "disabled", @class = "form-control" })
                                    </div>
                                    <button type="submit" class="btn btn-primary">Xóa</button>


                                </form>
                            }
                            <button onclick="window.location.href = '/admin/NhaSanXuat/Index'" class="btn btn-primary">Hủy</button>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>