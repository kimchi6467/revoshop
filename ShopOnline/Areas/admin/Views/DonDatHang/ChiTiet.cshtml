@using ShopOnline.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<ShopOnline.Models.DONHANG>
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Đơn Đặt Hàng</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh Sách Đơn Đặt Hàng
                </div>
                <button onclick="window.location.href = '/admin/DonDatHang/Create'" class="btn btn-primary">Thêm Mới</button>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="col-sm-12">
                            <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 93px;">
                                            Mã Đơn Hàng
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 116px;">
                                            Họ Và Tên
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 116px;">
                                            Địa chỉ
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 105px;">
                                            Số điện thoại
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 105px;">
                                            Ngày đặt
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr class="gradeA odd" role="row">
                                        <td class="sorting_1">@item.MaDH</td>

                                        <td class="sorting_1">@item.HoTenKH</td>
                                        <td>@item.DiaChiKH</td>
                                        <td>@item.SodtKH</td>
                                       
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ngaydat)
                                        </td>
                                        <td class="center">
                                            @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.MaDH }) |
                                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaDH }) |
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaDH })
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="">

                                <div class="col-sm-5">
                                    <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">Trang:@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount</div>
                                </div>
                                <div class="col-7">
                                    <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>

