@model ShopOnline.Models.menu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Menu</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                   Xóa Menu
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                
                                <form role="form">
                                    <div class="form-group">
                                        <label>Tên menu</label>
                                        @Html.TextBoxFor(model => model.name, new {disabled = "disabled", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Đường dẫn:</label>
                                        @Html.TextBoxFor(model => model.link, new {disabled = "disabled", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Thẻ meta</label>
                                        @Html.TextBoxFor(model => model.meta, new {disabled = "disabled", @class = "form-control" })
                                    </div>
                                    <button type="submit" class="btn btn-primary">Xóa</button>
                                    <button onclick="window.location.href = '/admin/Menu/'" class="btn btn-primary">Hủy</button>


                                </form>
                            }
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>