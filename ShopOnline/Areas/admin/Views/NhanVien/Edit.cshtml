@model ShopOnline.Models.NHANVIEN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản lý Nhân Viên</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cập Nhật Thông Tin Nhân Viên
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.MaNV)

                            <form role="form">
                                <div class="form-group">
                                    <label>Họ Và Tên</label>
                                    @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>Ngày Sinh</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        @Html.TextBoxFor(model => model.Ngaysinh, new { @class = "form-control" })

                                    </div><!-- /.input group -->
                                </div><!-- /.form group -->
                                <div class="form-group">
                                    <label>Đia Chỉ</label>
                                    @Html.TextBoxFor(model => model.DiachiNV, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Điện Thoại</label>
                                    @Html.TextBoxFor(model => model.DienthoaiNV, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Đia Chỉ E-Mail</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Tài khoản</label>
                                    @Html.TextBoxFor(model => model.Taikhoan, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Mật Khẩu</label>
                                    @Html.TextBoxFor(model => model.Matkhau, new { @class = "form-control" })
                                </div>

                                <button type="submit" class="btn btn-primary">Cập Nhật</button>



                            </form>
                            }
                            <button onclick="window.location.href = '/admin/NhanVien/DanhSach'" class="btn btn-primary">Hủy</button>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>