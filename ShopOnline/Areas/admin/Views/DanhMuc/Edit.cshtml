@model ShopOnline.Models.DANHMUC

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Danh Mục Sản Phẩm</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Chỉnh Sửa Danh Mục Sản Phẩm
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.MaDM)

                                <form role="form">
                                    <div class="form-group">
                                        <label>Tên menu</label>
                                        @Html.TextBoxFor(model => model.TenDANHMUC, new { @class = "form-control" })
                                    </div>                                    
                                    <div class="form-group">
                                        <label>Thẻ meta</label>
                                        @Html.TextBoxFor(model => model.meta, new { @class = "form-control" })
                                    </div>
                                    <button type="submit" class="btn btn-primary">Cập Nhật</button>


                                </form>
                            }
                            <button onclick="window.location.href = '/admin/DanhMuc/'" class="btn btn-primary">Hủy</button>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>