@model ShopOnline.Models.DANHMUC

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div id="page-wrapper" style="min-height: 612px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản Lý Danh Mục Sản Phẩm</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Thêm Danh Mục Sản Phâm
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                                <form role="form">
                                    <div class="form-group">
                                        <label>Tên menu</label>
                                        <input type="text" class="form-control" name="TenDANHMUC" placeholder="Nhập tên danh mục sản phẩm" required>

                                    </div>
                                    
                                    <div class="form-group">
                                        <label>Thẻ meta</label>
                                        <input type="text" class="form-control" name="meta" placeholder="Nhập thẻ meta" required>

                                    </div>
                                    <button type="submit" class="btn btn-primary">Thêm</button>


                                </form>
                            }
                            <button onclick="window.location.href = '/admin/DanhMuc/Index'" class="btn btn-primary">Hủy</button>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>